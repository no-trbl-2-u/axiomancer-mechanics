{
  "name": "axiomancer-mechanics",
  "version": "1.0.0",
  "description": "Turn-based RPG combat mechanics with philosophical themes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "echo Please use check 'package.json' or README.md for available commands...\n ",
    "dev": "echo Please use check 'package.json' or README.md for available commands...\n ",
    "build": "tsc && tsc-alias",
    "combat": "ts-node src/Combat/combat.cli.ts",
    "character": "ts-node src/Character/character.cli.ts",
    "game-state": "ts-node -r tsconfig-paths/register src/Game/gameState.cli.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix"
  },
  "keywords": [
    "rpg",
    "combat",
    "mechanics",
    "turn-based"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/commander": "^2.12.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.47.0"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "commander": "^14.0.2",
    "inquirer": "^13.0.1"
  }
}